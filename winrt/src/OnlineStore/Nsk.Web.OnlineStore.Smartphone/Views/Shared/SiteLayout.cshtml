<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link rel="Stylesheet" type="text/css" href="/Content/Site.css" />
    <link rel="Stylesheet" type="text/css" href="/Content/themes/smoothness/jquery-ui-1.8.1.custom.css" />
    @if (IsSectionDefined("CssSection"))
    {
        @RenderSection("CssSection")
    }
    <script src="@Url.Content("~/Scripts/jquery-1.8.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.9.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
</head>
<body>
    <div style="width: 100%">
        <h2>
            <a href="/Home">NSK Online Store 4 Mobile</a></h2>
    </div>
    <div>
        @if(!HttpContext.Current.Request.IsAuthenticated) {
        <text>
        Sign in to get personalized recommendations. New customer? <a href="/Home/Register">Start here</a>.
        </text>
        }
    </div>
    <div style="width: 100%">
        @using (Html.BeginForm("Search", "Catalog"))
        {
            <label for="query">
                Search
            </label>
            <input type="text" name="query" />
            <input type="submit" />
        }
    </div>
    <hr />
    <div style="width: 100%">
        @RenderBody()
    </div>
    <hr />
    <div style="width: 100%">
        NSK &copy; Copyleft 2008, by <a href="http://www.manageddesigns.it">Managed Designs</a>
    </div>
</body>
</html>
